{
  "instruments": {
    "ESP_Airspeed": {
      "esp_id": "ESP_Airspeed",
      "description": "Airspeed Indicator (knots)",
      "unit": "knots",
      "motors": {
        "0": {
          "dref": "sim/flightmodel/position/indicated_airspeed"
        }
      }
    },
    "ESP_Gyrocompass": {
      "esp_id": "ESP_Gyrocompass",
      "description": "Gyro Compass (heading)",
      "unit": "degrees",
      "motors": {
        "0": {
          "dref": "sim/cockpit2/gauges/indicators/heading_vacuum_deg_mag_pilot"
        },
        "1": {
          "dref": "sim/cockpit2/autopilot/heading_dial_deg_mag_pilot"
        }
      }
    },
    "ESP_Altimeter": {
      "esp_id": "ESP_Altimeter",
      "description": "Altimeter (altitude in feet, barometer setting in inches of mercury)",
      "unit": "feet",
      "motors": {
        "0": {
          "dref": "sim/cockpit2/gauges/indicators/altitude_ft_pilot"
        },
        "1": {
          "dref": "sim/cockpit/misc/barometer_setting"
        }
      }
    },
    "ESP_Inputs": {
      "esp_id": "ESP_Inputs",
      "description": "Input Controls",
      "encoders": {
        "EC11_HdgBug": {
          "dref": "sim/cockpit2/autopilot/heading_dial_deg_mag_pilot",
          "type": "relative"
        }
      }
    },
    "ESP_VertSpeed": {
      "esp_id": "ESP_VertSpeed",
      "description": "Vertical Speed Indicator (feet per minute)",
      "unit": "fpm",
      "motors": {
        "0": {
          "dref": "sim/cockpit2/gauges/indicators/vvi_fpm_pilot"
        }
      }
    },
    "ESP_AttitudeIndicator": {
      "esp_id": "ESP_AttitudeIndicator",
      "description": "Attitude Indicator (roll/pitch degrees)",
      "unit": "degrees",
      "motors": {
        "0": {
          "dref": "sim/cockpit2/gauges/indicators/roll_vacuum_deg_pilot"
        },
        "1": {
          "dref": "sim/cockpit2/gauges/indicators/pitch_vacuum_deg_pilot"
        }
      }
    },
    "ESP_TurnIndicator": {
      "esp_id": "ESP_TurnIndicator",
      "description": "Turn Coordinator (degrees/sec); Slip Indicator (degrees)",
      "unit": "degrees/sec",
      "motors": {
        "0": {
          "dref": "sim/cockpit2/gauges/indicators/turn_rate_roll_deg_pilot"
        },
        "1": {
          "dref": "sim/cockpit2/gauges/indicators/sideslip_degrees",
          "bounded": true
        }
      }
    }
  }
}
